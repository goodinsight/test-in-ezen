<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  <mapper namespace="kr.co.dong.articleMapper"> 
	
	<!-- 작성 댓글 정보조회 -->
		<select id="article_check" resultType="int">
			SELECT * FROM article
			 WHERE FK_u_number=#{FK_u_number}
		</select>
	
	<!-- 작성 댓글 삭제 -->
		<delete id="article_delete">
			DELETE FROM article
			WHERE a_number=#{a_number}
		</delete>
		
	<insert id="article_insert">
		insert into	article(a_number,a_context,a_date,FK_b_number,FK_u_number)
		values(#{a_number},#{a_context},#{a_date},#{FK_b_number},#{FK_u_number})
	</insert>

	<select id="article_listall">
		select a_number,a_context,a_date,FK_b_number,FK_u_number
		from article
		where FK_b_number=#{FK_b_number}
	</select>

	<update id="article_update">
		update article set a_context = #{a_context}, a_date = #{a_date}
		where a_number = #{a_number}
	</update>

  </mapper>